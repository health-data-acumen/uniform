{% extends 'admin/layout.html.twig' %}

{% block page_title %}
    {{ 'title.admin.account_settings'|trans }}
{% endblock %}

{% block page_content %}
    {{ form_start(settingsForm) }}
        {{ form_errors(settingsForm) }}

        <div class="space-y-4">
            <div class="gap-4 rounded-lg bg-slate-100 p-1 border border-neutral-200">
                <div class="px-4 py-2">
                    <h3 class="text-2xl font-bold mb-1">{{ 'label.admin.account_settings.smtp_server'|trans }}</h3>
                </div>

                <div class="grid lg:grid-cols-2 gap-4 p-4 rounded-md border border-neutral-200 bg-white">
                    {{ form_row(settingsForm.smtpHost) }}
                    {{ form_row(settingsForm.smtpPort) }}
                    {{ form_row(settingsForm.smtpUser) }}
                    {{ form_row(settingsForm.smtpPassword) }}
                    {{ form_row(settingsForm.mailerEncryption) }}
                </div>
            </div>

            <div class="gap-4 rounded-lg bg-slate-100 p-1 border border-neutral-200">
                <div class="px-4 py-2">
                    <h3 class="text-2xl font-bold mb-1">{{ 'label.admin.account_settings.mail_sender'|trans }}</h3>
                </div>

                <div class="grid lg:grid-cols-2 gap-4 p-4 rounded-md border border-neutral-200 bg-white">
                    {{ form_row(settingsForm.emailFromAddress) }}
                    {{ form_row(settingsForm.emailFromName) }}
                </div>
            </div>

            <button type="submit" class="btn btn-primary px-6">
                {{ 'action.save'|trans }}
            </button>
        </div>
    {{ form_end(settingsForm) }}
{% endblock %}
