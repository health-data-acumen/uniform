{% block content %}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <twig:Toast :type="type" :title="type|title" :message="message|trans" position="{{ position|default('center') }}" />
        {% endfor %}
    {% endfor %}
{% endblock %}

{% block turbo_stream %}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <turbo-stream action="append" target="flash-container">
                <template>
                    <twig:Toast :type="type" :title="type|title" :message="message|trans" position="{{ position|default('top-right') }}" />
                </template>
            </turbo-stream>
        {% endfor %}
    {% endfor %}
{% endblock %}
