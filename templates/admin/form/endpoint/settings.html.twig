{% extends 'admin/layout.html.twig' %}

{% block page_title_container %}
    <a href="{{ path('app_admin_form_endpoint_list') }}"
       class="inline-flex items-center gap-2 mb-4 font-medium text-sm text-neutral-600 hover:text-neutral-700"
    >
        &leftarrow; {{ 'action.admin.back_to_list'|trans }}
    </a>

    {{ parent() }}
{% endblock %}

{% block page_title %}
    {{ endpoint.name }}
{% endblock %}

{% block page_content %}
    <div>
        {{ include('admin/form/endpoint/_navbar.html.twig') }}

        <div class="grid grid-cols-4 gap-4 py-4">
            <nav class="col-span-1">
                {% set settingsMenu = knp_menu_get('admin.form_endpoint', ['menu.admin.form_endpoint.settings'], options: { endpoint }) %}

                <ul class="flex flex-col gap-1">
                    {% for item in settingsMenu %}
                        {# @var item \Knp\Menu\ItemInterface #}
                        {% set isActive = item is knp_menu_current %}
                        <li>
                            <a href="{{ item.uri }}"
                               {% if isActive %} aria-current="page" {% endif %}
                               class="flex py-2 px-4 rounded-sm text-sm font-medium text-neutral-600 hover:bg-neutral-100 hover:text-neutral-700 aria-[current=page]:bg-primary-100 aria-[current=page]:text-primary-700">
                                {{ item.label|trans }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>

            <div class="col-span-3 @container">
                {% block settings_content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
