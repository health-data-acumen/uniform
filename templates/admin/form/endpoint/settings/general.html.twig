{% extends 'admin/form/endpoint/settings.html.twig' %}

{% block settings_content %}
    <div class="gap-4 rounded-lg bg-slate-100 p-1 border border-neutral-200">
        <div class="px-4 py-2">
            <h3 class="text-2xl font-bold mb-1">{{ 'title.admin.form.endpoint.settings.general'|trans }}</h3>
            <p class="text-neutral-500 text-sm">{{ 'help.admin.form_endpoint.general_settings'|trans }}</p>
        </div>

        <div class="p-4 rounded-md border border-neutral-200 bg-white">
            {{ form_start(endpointForm) }}
                {{ form_widget(endpointForm) }}

                <button type="submit" class="btn btn-primary">{{ 'action.save'|trans }}</button>
            {{ form_end(endpointForm) }}
        </div>
    </div>
{% endblock %}
