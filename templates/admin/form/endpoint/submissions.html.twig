{% extends 'admin/form/endpoint/layout.html.twig' %}

{% block content %}
    <div class="space-y-4 mt-4" data-controller="bulk-select bulk-action">
        <h3 class="text-2xl font-bold mb-3">{{ 'title.admin.form.endpoint.submissions'|trans }}</h3>

        {# Bulk Actions Bar - Hidden by default, shown when items are selected #}
        <div data-bulk-action-target="button" class="hidden flex items-center gap-4 px-4 py-3 bg-neutral-50 border border-neutral-200 rounded-lg">
            <div class="flex items-center gap-3">
                <span data-bulk-action-target="counter" class="text-sm font-medium text-neutral-700">0 selected</span>
            </div>
            <div class="ml-auto">
                <form method="post" 
                      action="{{ path('app_dashboard_form_endpoint_submissions_bulk_delete', {'id': endpoint.id}) }}"
                      data-turbo-confirm="{{ 'message.admin.form.endpoint.confirm_bulk_delete'|trans }}"
                      class="inline"
                      data-bulk-action-target="form"
                >
                    <input type="hidden" name="_token" value="{{ csrf_token('bulk_delete_submissions') }}">
                    <button type="submit" class="btn btn-destructive inline-flex items-center gap-2">
                        {{ ux_icon('heroicons:trash-20-solid', {'class': 'size-5'}) }}
                        {{ 'action.admin.form.endpoint.bulk_delete'|trans }}
                    </button>
                </form>
            </div>
        </div>

        <div class="space-y-4">
            {# Select All Checkbox - Only show if there are submissions #}
            {% if submissions|length > 0 %}
                <div class="flex items-center gap-2 px-4 py-2 bg-white border border-neutral-200 rounded-lg">
                    <label for="select-all" class="flex items-center gap-2 cursor-pointer">
                        <input type="checkbox" 
                               id="select-all" 
                               data-bulk-select-target="selectAll"
                               data-action="bulk-select#selectAllChanged"
                               class="form-checkbox">
                        <span class="text-sm font-medium text-neutral-700">{{ 'action.admin.form.endpoint.select_all'|trans }}</span>
                    </label>
                </div>
            {% endif %}

            {% for submission in submissions %}
                <div data-controller="collapse"
                     data-collapse-open-value="false"
                     class="group text-sm border border-neutral-200 rounded-lg bg-white"
                >
                    <div class="flex items-center gap-4 px-4 py-3">
                        <div class="self-start">
                            <label for="select-{{ submission.id }}">
                                <span class="sr-only">{{ 'label.admin.form.endpoint.select_submission'|trans }}</span>
                                <input type="checkbox" 
                                       id="select-{{ submission.id }}" 
                                       name="submissions[]" 
                                       value="{{ submission.id }}" 
                                       data-bulk-select-target="checkbox"
                                       data-action="bulk-select#checkboxChanged"
                                       class="form-checkbox bg-white">
                            </label>
                        </div>
                        <div class="grow grid grid-cols-3 gap-6 items-start">
                            {% for column in columns %}
                                <p class="flex flex-col gap-1">
                                    <span class="font-medium">{{ column|title }}</span>
                                    {{ submission.payload[column]|u.truncate(85, '...') }}
                                </p>
                            {% endfor %}

                            <p class="flex flex-col gap-1">
                                <span class="font-medium">{{ 'label.admin.form.endpoint.submission_date'|trans }}</span>
                                {{ submission.submittedAt|date('M d, Y') }}
                            </p>
                        </div>

                        <div class="flex gap-2 items-center">
                            <div data-controller="dropdown">
                                <button data-dropdown-target="trigger" class="p-2 rounded-md text-neutral-600 hover:text-neutral-700 hover:bg-neutral-100">
                                    {{ ux_icon('heroicons:ellipsis-horizontal-20-solid', {'class': 'size-6'}) }}
                                    <span class="sr-only">{{ 'action.admin.form.endpoint.more_actions'|trans }}</span>
                                </button>

                                <div data-dropdown-target="popover" class="hidden absolute top-1 right-0 z-10 w-48 bg-white border border-neutral-200 rounded-md shadow-lg">
                                    <a href="{{ path('app_submission_send_notification', {'id': submission.id, '_token': csrf_token('submission-%d-notification'|format(submission.id))}) }}"
                                       data-turbo-method="post"
                                       class="flex px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100"
                                    >
                                        {{ 'action.admin.form.endpoint.send_notification'|trans }}
                                    </a>
                                </div>
                            </div>

                            <button data-action="collapse#toggle" class="p-2 rounded-md text-neutral-600 hover:text-neutral-700 hover:bg-neutral-100">
                                {{ ux_icon('heroicons:chevron-down-20-solid', {'class': 'size-6 transition-transform duration-300 in-aria-[expanded=true]:-rotate-180'}) }}
                                <span class="sr-only">{{ 'action.admin.form.endpoint.show_submission_details'|trans }}</span>
                            </button>
                        </div>
                    </div>

                    <div data-collapse-target="content" class="hidden p-4 border-t rounded-b-lg border-neutral-200 bg-white">
                        <dl class="grid grid-cols-[auto_1fr] gap-x-8 gap-y-2 pl-8">
                            {% for key, value in submission.payload %}
                                <div class="grid col-span-2 grid-cols-subgrid py-1">
                                    <dt class="font-medium">{{ key|title }}</dt>
                                    <dd>{{ value }}</dd>
                                </div>
                            {% endfor %}
                        </dl>
                    </div>
                </div>
            {% else %}
                <div class="text-center text-slate-500 p-4 bg-white rounded-lg border border-neutral-200">
                    {{ 'message.admin.form.endpoint.no_submissions'|trans }}
                </div>
            {% endfor %}
        </div>

        <div class="flex justify-between items-center gap-4 text-sm">
            <div>Page <span class="font-medium">{{ paginator.currentPage }}</span> of <span class="font-medium">{{ paginator.nbPages }}</span></div>

            {% if paginator.haveToPaginate %}
                <div class="flex gap-2">
                    {% if paginator.hasPreviousPage %}
                        <a href="{{ path('app_dashboard_form_endpoint_submission_list', {'id': endpoint.id, 'page': paginator.previousPage}) }}" class="btn btn-secondary">
                            {{ ux_icon('heroicons:chevron-left-20-solid', {'class': 'size-5'}) }} {{ 'action.admin.form.endpoint.previous_page'|trans }}
                        </a>
                    {% else %}
                        <button class="btn btn-secondary disabled" disabled>
                            {{ ux_icon('heroicons:chevron-left-20-solid', {'class': 'size-5'}) }} {{ 'action.admin.form.endpoint.previous_page'|trans }}
                        </button>
                    {% endif %}

                    {% if paginator.hasNextPage %}
                        <a href="{{ path('app_dashboard_form_endpoint_submission_list', {'id': endpoint.id, 'page': paginator.nextPage}) }}" class="btn btn-secondary">
                            {{ 'action.admin.form.endpoint.next_page'|trans }} {{ ux_icon('heroicons:chevron-right-20-solid', {'class': 'size-5'}) }}
                        </a>
                    {% else %}
                        <button class="btn btn-secondary disabled" disabled>
                            {{ 'action.admin.form.endpoint.next_page'|trans }} {{ ux_icon('heroicons:chevron-right-20-solid', {'class': 'size-5'}) }}
                        </button>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
