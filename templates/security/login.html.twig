{% extends 'layout.html.twig' %}

{% block title %}
    {{ 'title.security.login'|trans }}
{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col gap-6 items-center justify-center">

        <div class="space-y-2">
            {{ ux_icon('logo', {'class': 'size-18', 'title': 'UniForm Logo'}) }}
        </div>

        <div class="min-w-md rounded-lg bg-slate-100 p-1 border border-neutral-200">
            <div class="px-4 py-2">
                <hgroup class="text-slate-700">
                    <h2 class="text-2xl font-bold mb-1">{{ 'title.security.login'|trans }}</h2>
                    <p>{{ 'description.security.login'|trans }}</p>
                </hgroup>
            </div>

            <div class="p-4 rounded-md border border-neutral-200 bg-white">
                <form method="post" action="{{ path('app_security_login') }}" class="space-y-3">
                    {% if error %}
                        <div role="alert" class="px-4 py-3 rounded rounded-l-none border-l-4 border-red-600 bg-red-100 text-red-600">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <div class="space-y-1.5 mb-3">
                        <label for="username" class="form-label text-base">{{ 'label.security.email'|trans }}</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control text-base" autocomplete="email" required autofocus>
                    </div>

                    <div class="space-y-1.5 mb-3" {{ stimulus_controller('toggle-password', {'showLabel': 'label.security.show_password'|trans, 'hideLabel': 'label.security.hide_password'|trans}) }}>
                        <div class="flex items-center justify-between">
                            <label for="password" class="form-label text-base">{{ 'label.security.password'|trans }}</label>

                            <button
                                type="button" data-toggle-password-target="button" data-action="toggle-password#toggle"
                                aria-label="Toggle password visibility"
                                class="text-sm font-medium text-primary-600 hover:text-primary-800"
                            >
                                {{ 'label.security.show_password'|trans }}
                            </button>
                        </div>
                        <input type="password" name="_password" id="password" data-toggle-password-target="input" class="form-control text-base" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
